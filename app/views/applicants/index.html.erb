<div class="col-md-12">
  <h1> All applicants </h1>
  <div class="total-applicants">
    <p>Total applicants: <%= @total %></p>
  </div>

  <div class="all-applicants">
    <table>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>Company</th>
        <th>Interest</th>
      </tr>
      <% @applicants.each do |applicant| %>
      <tr>
        <td><%=applicant.firstname%></td>
        <td><%=applicant.lastname%></td>
        <td><%=applicant.email%></td>
        <td><%=applicant.nationality%></td>
        <td><%=applicant.location%></td>
        <td><%=applicant.language%></td>
        <td><%=applicant.english%></td>
        <td><%=applicant.spanish%></td>
        <td><%=applicant.otherlang%></td>
        <td><%=applicant.orgtype%></td>
        <td><%=applicant.company%></td>
        <td><%=applicant.website%></td>
        <td><%=applicant.aboutcompany%></td>
        <td><%=applicant.position%></td>
        <td><%=applicant.businessexperience%></td>
        <td><%=applicant.sectorexperience%></td>
        <td><%=applicant.bmodel%></td>
        <td><%=applicant.interest%></td>
        <td><%=applicant.profile%></td>
        <td><%=applicant.additional%></td>
      </tr>
    <% end %>
    </table>
  </div>
</div>